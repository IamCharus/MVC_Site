@using Odev.Entity
@model IEnumerable<Product>
    <h3>Popüler Ürünler</h3>
<ul class="nav nav-list promowrapper">
    @foreach (var item in Model)
    {
        <li>
            <div class="thumbnail">
                
                <img alt="bootstrap ecommerce templates" src="~/Content/image/@item.Image">
                <div class="caption">
                    <h4><a class="defaultBtn" href="/Home/ProductDetails/@item.Id">Görüntüle</a> <span class="pull-right">@item.Price (₺)</span></h4>
                </div>
            </div>
        </li>
                        <li style="border: 0px currentColor; border-image: none;"> &nbsp;</li>
                    }


</ul>
